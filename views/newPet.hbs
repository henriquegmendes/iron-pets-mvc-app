<div>
  <form action="/pets/new" method="post" enctype="multipart/form-data">
    <input type="text" name="petName" placeholder="Nome do pet">
    <input type="file" name="petImage" placeholder="Link da foto do pet">
    <select name="petSpecies">
      <option value="dog">Cachorro</option>
      <option value="cat">Gato</option>
      <option value="parrot">Papagaio</option>
    </select>
    <input type="date" name="petBirthDate" placeholder="Data que seu pet nasceu">

    <button type="submit">Cadastrar Pet</button>
  </form>
</div>